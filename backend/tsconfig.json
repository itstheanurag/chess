{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["types/*"],
      "@enums/*": ["enums/*"],
      "@middlewares/*": ["middlewares/*"],
      "@validators/*": ["validators/*"],
      "src/*": ["*"]
    },
    "outDir": "./dist",
    "moduleResolution": "node",
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
